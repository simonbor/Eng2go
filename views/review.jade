extend layout
block content
  .review-template
    p
      | Choose YouSay Level
      .btn-group(data-toggle="buttons")#level
       - ll = ll || 1;
       - var levels = parseInt(ll) + 1;
       - levels = levels > 10 ? 10 : levels;
       - for (var i = 1; i < levels; ++i) {
         label.btn.btn-default.active
           input(type="radio", name="level", id="lvl#{i}", value=i) 
           | Level #{i}
       - }
    p
      | Choose YouSay Type
      .btn-group(data-toggle="buttons")#mode
        label.btn.btn-default.active
          input(type="radio", name="mode", id="md1", value="fr") 
          | Full
        label.btn.btn-default
          input(type="radio", name="mode", id="md2", value="sr") 
          | Short
        label.btn.btn-default
          input(type="radio", name="mode", id="md3", value="br") 
          | Brief
    p
      | Choose YouSay Number
      .input-group
        input(type="text", value="1", style="float:right;width:67%;" data-slider-min="1" data-slider-max="35" data-slider-step="1" data-slider-value="1").form-control#ysRange
        input(type="text", min="1", value="1", style="float:right;width:25%").form-control#ysNum
        span.input-group-btn
          button.btn.btn-default(data-toggle="modal" data-target=".bs-example-modal-lg")#goBtn Go!
        
        // modal dialog window (popup)  
        .modal.fade.bs-example-modal-lg(tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
          .modal-dialog.modal-lg
            .modal-content
              .modal-header
                button(type="button" class="close" data-dismiss="modal")
                  span(aria-hidden="true") x
                  span.sr-only Close
                h4.modal-title#myLargeModalLabel YouSay #
              .modal-body 
                .modal-body-header#m_header
                .modal-body-body
                ul.pager
                  li.previous
                    a#prev(href="#") &larr; Older
                  li.next
                    a#next(href="#") Newer &rarr;